{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@database/*": [
        "database/*"
      ],
      "@errors/*": [
        "errors/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@env/*": [
        "env/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "vitest/importMeta"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./build",
    "node_modules"
  ]
}